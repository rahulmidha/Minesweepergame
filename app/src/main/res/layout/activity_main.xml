<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:paddingBottom="16dp"
android:paddingLeft="16dp"
android:paddingRight="16dp"
android:paddingTop="16dp"
tools:context="com.dal.user.minesweepergame.MainActivity">


<GridView
    android:id="@+id/grid"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:stretchMode="columnWidth"
    android:numColumns="9"
    android:layout_alignParentTop="true"
    android:layout_alignParentStart="true" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/Linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        >

        <Button
            android:id="@+id/A"
            android:layout_width="71dp"
            android:layout_height="55dp"
            android:onClick="setA"
            android:text="Beginner"
            tools:layout_conversion_absoluteX="16dp"
            tools:layout_conversion_absoluteY="414dp"
            tools:layout_conversion_absoluteWidth="49dp"
            tools:layout_conversion_absoluteHeight="86dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintRight_toLeftOf="@+id/B"
            android:layout_marginRight="0dp"
            app:layout_constraintHorizontal_bias="1.0" />

        <Button
            android:id="@+id/B"
            android:layout_width="127dp"
            android:layout_height="59dp"
            android:onClick="setB"
            android:text="Intermediate"
            tools:layout_conversion_absoluteX="65dp"
            tools:layout_conversion_absoluteY="412dp"
            tools:layout_conversion_absoluteWidth="108dp"
            tools:layout_conversion_absoluteHeight="58dp"
            tools:layout_editor_absoluteY="3dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintHorizontal_bias="0.344" />

        <Button
            android:id="@+id/C"
            android:layout_width="83dp"
            android:layout_height="64dp"
            android:onClick="setC"
            android:text="Expert"
            tools:layout_conversion_absoluteX="173dp"
            tools:layout_conversion_absoluteY="409dp"
            tools:layout_conversion_absoluteWidth="73dp"
            tools:layout_conversion_absoluteHeight="64dp"
            tools:layout_editor_absoluteY="1dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="@+id/I"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.764" />


        <Button
            android:id="@+id/I"
            android:layout_width="72dp"
            android:layout_height="67dp"
            android:onClick="setI"
            android:text="Reset"
            tools:layout_conversion_absoluteX="246dp"
            tools:layout_conversion_absoluteY="414dp"
            tools:layout_conversion_absoluteWidth="63dp"
            tools:layout_conversion_absoluteHeight="53dp"
            tools:layout_editor_absoluteY="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent" />

    </android.support.constraint.ConstraintLayout>

</RelativeLayout>